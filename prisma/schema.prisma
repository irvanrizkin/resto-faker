generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Restaurant {
  id     String  @id
  name   String  @default("")
  price  Int     @default(0)
  rating Float   @default(0.0)
  status Boolean @default(true)
  images Image[]

  @@map("restaurant")
}

model Image {
  id           String     @id
  title        String     @default("")
  url          String     @db.Text
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  @@index([restaurantId])
  @@map("image")
}
